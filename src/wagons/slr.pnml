/* Slr sprites */
spriteset(sset_slr_purchase, "gfx/wagons/slr.png")     { tmpl_sprite_purchase(4, 60) }
spriteset(sset_slr, "gfx/wagons/slr.png")              { tmpl_sprite_train(4, 20) }
spriteset(sset_slr_open, "gfx/wagons/slr.png")         { tmpl_sprite_train(4, 80) }
#ifdef ZOOM_SPRITES_NON_GPL_ENABLED
alternative_sprites(sset_slr,
    ZOOM_LEVEL_IN_2X, BIT_DEPTH_8BPP, "gfx/wagons/slr-x2.png")     { tmpl_sprite_train_x2(8, 40) }
alternative_sprites(sset_slr_open,
    ZOOM_LEVEL_IN_2X, BIT_DEPTH_8BPP, "gfx/wagons/slr-x2.png")     { tmpl_sprite_train_x2(8, 120) }
#endif
spritegroup sgroup_slr {
    loaded:     [sset_slr];
    loading:    [sset_slr_open];
}

/* Define the actual train */
item(FEAT_TRAINS, item_slr) {
    property {
        /* common properties */
        name:                           string(STR_SLR_NAME);
        climates_available:             PKP_CLIMATES; 
        introduction_date:              PKP_INTRODUCTION_DATE;
        vehicle_life:                   20;
        reliability_decay:              20;
        CARGO_NORMAL_REFRIGERATED_WAGON_DEFINITION
        loading_speed:                  5;
        cost_factor:                    PURCHASE_COST_SLR;
        running_cost_factor:            RUNNING_COST_CARGO_SMALL;
        cargo_age_period:               int(185*1.41);  // slow ageing
        /* train properties */
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        speed:                          80 km/h;
        misc_flags:                     bitmask(TRAIN_FLAG_AUTOREFIT);
        refit_cost:                     0;
        track_type:                     RAIL;
        power:                          0;
        running_cost_base:              RUNNING_COST_STEAM;
        cargo_capacity:                 16*CARGO_NORMAL_REFRIGERATED_WAGON_MULTIPLIER;
        weight:                         11 ton;
        length:                         6;
        visual_effect_and_powered:      visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
        bitmask_vehicle_info:           bitmask(VINFO_CARGO_WAGON);
    }

if(param_keep_old_vehs) {
    property {
        model_life:                     VEHICLE_NEVER_EXPIRES;
    }
} else {
    property {
        model_life:                     65;
        retire_early:                   16;
    }
}

    graphics {
        purchase:                   sset_slr_purchase;
        additional_text:            return string(STR_BRAKE_AIR);
        default:                    sgroup_slr;
    }
}
