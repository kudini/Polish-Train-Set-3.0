/* Fy sprites */
spriteset(sset_fy_purchase, "gfx/wagons/fy.png")       { tmpl_sprite_purchase(4, 60) }
spriteset(sset_fy, "gfx/wagons/fy.png")                { tmpl_sprite_train(4, 20) }
spriteset(sset_fy_open, "gfx/wagons/fy.png")           { tmpl_sprite_train(4, 80) }
#ifdef _ZOOM_SPRITES_ENABLED_
alternative_sprites(sset_fy,
    ZOOM_LEVEL_IN_2X, BIT_DEPTH_8BPP, "gfx/wagons/fy-x2.png")      { tmpl_sprite_train_x2(8, 40) }
alternative_sprites(sset_fy_open,
    ZOOM_LEVEL_IN_2X, BIT_DEPTH_8BPP, "gfx/wagons/fy-x2.png")      { tmpl_sprite_train_x2(8, 120) }
#endif
spritegroup sgroup_fy {
    loaded:     [sset_fy];
    loading:    [sset_fy_open];
}

/* Define the actual train */
item(FEAT_TRAINS, item_fy) {
    property {
        /* common properties */
        name:                           string(STR_FY_NAME);
        climates_available:             PKP_CLIMATES;
        introduction_date:              PKP_INTRODUCTION_DATE;
        vehicle_life:                   20;
        reliability_decay:              20;
        CARGO_LUGGAGE_WAGON_DEFINITION
        loading_speed:                  5;
        cost_factor:                    PURCHASE_COST_FY;
        running_cost_factor:            RUNNING_COST_PASS_OLD + RUNNING_COST_POSTMAN;
        /* train properties */
        sprite_id:                      SPRITE_ID_NEW_TRAIN;
        speed:                          80 km/h;
        misc_flags:                     bitmask(TRAIN_FLAG_AUTOREFIT);
        refit_cost:                     0;
        track_type:                     RAIL;
        power:                          0;
        running_cost_base:              RUNNING_COST_STEAM;
        cargo_capacity:                 24;
        weight:                         16 ton;
        length:                         8;
        visual_effect_and_powered:      visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);
        bitmask_vehicle_info:           bitmask(VINFO_PASSENGER_WAGON, VINFO_LUGGAGE_WAGON);
    }

if(param_keep_old_vehs) {
    property {
        model_life:                     VEHICLE_NEVER_EXPIRES;
    }
} else {
    property {
        model_life:                     67;
        retire_early:                   16;
    }
}
    graphics {
        purchase:                   sset_fy_purchase;
        additional_text:            return string(STR_BRAKE_AIR);
        default:                    sgroup_fy;
    }
}